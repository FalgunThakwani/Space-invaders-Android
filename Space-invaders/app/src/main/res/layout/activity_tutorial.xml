<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_sky_stars"
    tools:context=".TutorialActivity">


    <TextView
        android:id="@+id/textView_logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="70dp" android:layout_marginTop="50dp"
        android:layout_marginEnd="71dp" android:text="SPACE INVADERS" android:textColor="@android:color/white"
        android:textSize="34sp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="100dp" android:layout_marginTop="50dp"
        android:text="INSTRUCTION EXAMPLE 1"
        android:textColor="#FFFAFA"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView_logo2"
    />
    <Button
        android:id="@+id/button_continue"
        android:layout_width="125dp"
        android:layout_height="50dp" android:layout_marginStart="143dp" android:layout_marginBottom="44dp"
        android:text="CONTINUE" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>