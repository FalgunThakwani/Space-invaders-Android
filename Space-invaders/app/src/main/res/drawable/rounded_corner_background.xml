<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Set the background color of the box -->
            <corners android:radius="18dp" /> <!-- Set the radius for rounded corners -->
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_500" /> <!-- Set the shadow color -->
            <corners android:radius="16dp" /> <!-- Set the same radius as the box's rounded corners -->
        </shape>
    </item>
</layer-list>
